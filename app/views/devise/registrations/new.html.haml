= render "items/header"
.Signup
  .Signup__main
    %h2.Signup__title 新規会員登録
    .Signup__head
      .Signup__head__form
        = form_for @user, url: user_registration_path do |f|
          = render "devise/shared/error_messages", resource: @user
          .Signup__head__form__field
            = f.label 'ニックネーム'
            %span.Signup__head__form__field__require 必須
            %br/
            = f.text_field :nickname, placeholder: '例）田中フリマ'
          .Signup__head__form__field
            = f.label 'E-mail'
            %span.Signup__head__form__field__require  必須
            %br/
            = f.email_field :email, autofocus: true, placeholder: 'PC・携帯どちらでも可', autocomplete: "email" 
          .Signup__head__form__field
            = f.label 'パスワード'
            %span.Signup__head__form__field__require  必須
            %br/
            = f.password_field :password, placeholder: '7文字以上', autocomplete: "new-password"
          .Signup__head__form__field
            = f.label 'パスワード(確認用)'
            %span.Signup__head__form__field__require  必須
            %br/
            = f.password_field :password_confirmation, placeholder: '7文字以上', autocomplete: "new-password"
          .Signup__head__form__actions
            = f.submit "次へ", class: 'next-btn'
= render "items/footer"